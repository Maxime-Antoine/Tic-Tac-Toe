<UserControl x:Class="TicTacToe.Controls.Case"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TicTacToe"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="50">
    <Button Name="Btn" Content="{Binding DataContext}">
        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="IsEnabled" Value="True" />
                <Style.Triggers>
                    <!-- Disable the case when it's already played -->
                    <DataTrigger Binding="{Binding ElementName=Btn, Path=Content, Converter={StaticResource IsNullConverter}}" Value="False">
                        <Setter Property="IsEnabled" Value="False" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
    </Button>
</UserControl>